<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
  </plugin-info>
  <resource type="i18n" name="i18n" location="com.atlassian.tutorial.hello-world"/>
  <web-section name="hello-world-section" i18n-name-key="hello-world-section.name" key="hello-world-section" location="client-sites-link" weight="1000">
    <description key="hello-world-section.description">The hello-world-section Plugin</description>
  </web-section>
  <web-item name="Hello World Menu" i18n-name-key="hello-world-menu.name" key="hello-world-menu" section="system.top.navigation.bar" weight="1000">
    <description key="hello-world-menu.description">The Hello World Menu Plugin</description>
    <label key="hello-world-menu.label"/>
    <link linkId="client-sites-link"/>
  </web-item>
  <web-item name="Hello World Item" i18n-name-key="hello-world-item.name" key="hello-world-item" section="client-sites-link/hello-world-item" weight="1000">
    <description key="hello-world-item.description">The hello-world-item</description>
    <label key="hello-world-item.label"></label>
    <link linkId="hello-world-item-link">https://www.google.pl</link>
  </web-item>
</atlassian-plugin>
