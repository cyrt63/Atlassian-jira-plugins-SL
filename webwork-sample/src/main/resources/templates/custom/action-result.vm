<html>
  <head>
    <title>Message Action</title>
  </head>
  
#set( $isError = $action.isFailureResult() )
#set( $status = $action.getStatus() )
#set( $message = $action.getMessage() )
  
  <body>

	#if ($isError)
    	<script >
		   JIRA.Messages.showErrorMsg('$message', {closeable: true, timeout: 60});
		</script>
	#else
	    <script >
			JIRA.Messages.showSuccessMsg('$message', {closeable: true, timeout: 60});
		</script>
	#end

    <div style="background: #FFFFFF">
      <table class="jiraform maxWidth">
        <tr>
          <td class="jiraformheader">
            <h3 class="formtitle">Execute Action status</h3>
          </td>
        </tr>
        <tr>
          <td class="jiraformbody">
          	Action result : 
          		<strong>
					#if ($isError)
						<font color="red">$status</font>
					#else
						<font color="green">$status</font>
					#end
				</strong>
          </td>
        </tr>   

      </table>  
      <br>      

  </body>
</html>
