<atlassian-plugin key="${project.groupId}.webwork" name="Webwork Sample" plugins-version="2">

	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
		<application-version min="3.11" max="4.1" />
	</plugin-info>

	<resource name="common-18n" type="i18n" location="com.pduleba.jira.action.config" />

	<webwork1 key="pduleba-actions" name="PDuleba Actions">
		<description>Custom actions</description>
		<actions>
		    <action name="com.pduleba.jira.action.ExtendedCreateWorklog" alias="CreateWorklog">
		        <view name="error">/secure/views/issue/logwork.jsp</view>
		        <view name="input">/secure/views/issue/logwork.jsp</view>
		        <view name="securitybreach">/secure/views/securitybreach.jsp</view>
		    </action>
		</actions>
	</webwork1>
	
	<component-import key="jiraDurationUtils" interface="com.atlassian.jira.util.JiraDurationUtils" />

	<web-section key="ct-samples-section" name="Samples" location="system.admin" weight="110">
		<description>The Samples section in the Admin menu</description>
		<label key="com.pduleba.jira.action.message.section.label" />
	</web-section>

	<web-item key="maId1" name="Message Action 1" section="system.admin/ct-samples-section" weight="10">
		<label key="com.pduleba.jira.action.message.action.label.1" />
		<link>/secure/CreateWorklog.jspa</link>
	</web-item>


</atlassian-plugin>
